# .env file for Local Ollama Configuration

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:270m

# Redis Configuration (Optional - for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
APP_NAME=SAMNEX AI Local
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# File Upload Settings
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf,txt
UPLOAD_DIR=uploaded_files

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST=5

# Session Management
SESSION_TIMEOUT_HOURS=24
MAX_CHAT_HISTORY=50

# Language Support
SUPPORTED_LANGUAGES=en,hi,mr
DEFAULT_LANGUAGE=en

# Model Performance Settings
CHUNK_SIZE=400
MAX_CHUNKS=8
MAX_TOKENS=1000
TEMPERATURE=0.1

# Cache Settings
CACHE_MAX_SIZE=50
CACHE_TTL_HOURS=24